<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="80" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" minWidth="15.0" styleClass="cell_big_label" wrapText="true" />
                <Label fx:id="patientId" styleClass="cell_big_label" text="\$patientId" wrapText="true" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="dateTime" styleClass="cell_small_label" text="\$dateTime" wrapText="true" />
            </HBox>
            <Label fx:id="notes" styleClass="cell_small_label" text="\$notes" wrapText="true" />
        </VBox>
    </GridPane>
</HBox>
